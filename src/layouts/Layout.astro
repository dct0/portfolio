---
import Header from "@/components/Header.astro";
import NavItem from "@/components/NavItem.astro";
import SidebarController from "@/components/SidebarController";
import { CMS_NAME } from "@/lib/constants";

import "@/styles/globals.css";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  heading: string;
  subheading: string;
  frontmatter?: Omit<Props, "frontmatter">;
}

const { title, heading, subheading } = Astro.props.frontmatter || Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="description"
      content={`This is a portfolio built with Astro and ${CMS_NAME}.`}
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="flex h-screen w-full bg-secondary">
    <SidebarController client:only>
      <NavItem name="Home" href="/" client:load />
      <NavItem name="Projects" href="/projects" client:load />
      <NavItem name="Posts" href="/posts" client:load />
      <NavItem name="Links" href="/links" client:load />
    </SidebarController>
    <div class="flex w-full flex-col overflow-y-auto px-8 sm:px-20">
      <Header title={heading} description={subheading} />
      <slot />
    </div>
  </body>
</html>
